{
  "name": "first-js",
  "version": "1.0.0",
  "description": "A simple website built with HTML, CSS, and JavaScript",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "http-server -p 8080",
    "lint:html": "html-validate \"*.html\"",
    "lint:css": "stylelint \"css/*.css\"",
    "lint:js": "eslint \"js/*.js\"",
    "lint": "npm run lint:html && npm run lint:css && npm run lint:js",
    "test": "npm run lint && node tests/run-tests.js",
    "test:ci": "npm run lint && npm run test:unit && npm run test:integration",
    "test:unit": "node tests/run-tests.js",
    "test:integration": "echo 'Integration tests would run here'",
    "test:e2e": "echo 'E2E tests would run here'",
    "security:audit": "npm audit --audit-level=moderate",
    "security:fix": "npm audit fix",
    "build": "echo 'Build process completed - static site ready'"
  },
  "keywords": [
    "html",
    "css",
    "javascript",
    "website"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "eslint": "^9.32.0",
    "eslint-plugin-no-secrets": "^2.2.1",
    "eslint-plugin-security": "^3.0.1",
    "html-validate": "^7.12.0",
    "http-server": "^14.1.1",
    "jest": "^29.4.1",
    "stylelint": "^14.16.1",
    "stylelint-config-standard": "^29.0.0"
  },
  "dependencies": {
    "@emailjs/browser": "^4.4.1"
  }
}
